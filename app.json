{
  "expo": {
    "name": "ParkEasy",
    "slug": "parkeasy-mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "parkeasy",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "backgroundColor": "#020617",
      "resizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.parkeasy.mobile",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "ParkEasy uses your location to find nearby parking spots.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "ParkEasy uses your location to find nearby parking spots."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png",
        "backgroundColor": "#020617"
      },
      "package": "com.parkeasy.mobile",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ]
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "ParkEasy uses your location to find nearby parking spots."
        }
      ]
    ]
  }
}
